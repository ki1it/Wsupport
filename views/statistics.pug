doctype
html(lang='en')
  head
    include head.pug
  body
    mixin rowTable(name, ans,vls, proj, srtime)
      tr

        td #[a(href="manager?id=" + name) @#{name}]
        td #{ans}
        td #{vls}
        td #{proj}
        td #{srtime}
    div.uk-container
      include header.pug
    div.uk-container.main
      div(uk-grid)
        div(class="uk-width-1-6@m side-menu")
          include menu.pug
        div(class="uk-width-5-6@m uk-card uk-card-default uk-card-body")
          h3 #{zagolovok}
          div.uk-overflow-auto
            table.uk-table.uk-table-hover.uk-table-middle.uk-table-divider
              thead
                tr
                  th Менеджер
                  th Кол-во ответов в группах
                  th Кол-во ответов в лс
                  th Кол-во проектов
                  th СР. Время ответа, сек
              tbody
                - for(var i=0; i<managers.rowCount; i++)
                  +rowTable(managers.name, '-', '-', '-', '-')

  
         
    include footer.pug

        
          
      
