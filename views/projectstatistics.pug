doctype
html(lang='en')
    head
        include head.pug
    body
        mixin rowTable(name, ans, srtime)
            tr
                td #[a(href="manager?id=" + name) @#{name}]
                td #{ans}
                td #{srtime}
        div.uk-container
            include header.pug
        div.uk-container.main
            div(uk-grid)
                div(class="uk-width-1-6@m side-menu")
                    include menu.pug
                div(class="uk-width-5-6@m uk-card uk-card-default uk-card-body")
                    h3 #{zagolovok}
                    div.uk-overflow-auto
                        table.uk-table.uk-table-hover.uk-table-middle.uk-table-divider
                            thead
                                tr
                                    th Менеджер
                                    th Кол-во ответов
                                    th СР. Время ответа
                            tbody
                                - for(var i=0; i<countMan; i++)
                                    +rowTable(managers[i], countAns[i], srTimeAns[i])



        include footer.pug




